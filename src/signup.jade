doctype html
html(lang="en")
  head
    title
    link(rel="stylesheet",type="text/css",href="./assets/styles/application.css")
    link(href="http://fonts.googleapis.com/css?family=Roboto+Slab:300,700,100,400",rel="stylesheet",type="text/css")
  body
    nav.navbar
      .container
        .navbar-header
          a.navbar-brand(href="./index.html")
            | Que
    .container.que-contents.que-contents-login.text-center
      .row
        .col-md-4.col-md-offset-4
          form
            h2.que-form-title Sign Up
            .form-group
              input(type="email",class="form-control input-lg",id="MailAddress",placeholder="Mail Address")
            .form-group
              input(type="password",class="form-control input-lg",id="Password",placeholder="Password")
            .form-group
              a.btn-que.btn-que-primary.btn-que-lg.btn-que-block(href="index.html") Sign Up
          hr
          p Already have an account? 
            a(href="login.html")
              strong Log In
    script(src="./assets/scripts/application.js")

