doctype html
html(lang="en")
  head
    title
    link(rel="stylesheet",type="text/css",href="./assets/styles/application.css")
    link(href="http://fonts.googleapis.com/css?family=Roboto+Slab:300,700,100,400",rel="stylesheet",type="text/css")
  body
    nav.navbar
      .container
        .navbar-header
          a.navbar-brand(href="./index.html")
            | Que
    header.que-page-header.que-page-header-non-padding-bottom
      .container
        ul.nav.nav-minimal
          li.active
            a(href="./index.html") Recent queries
          li
            a(href="./savedQueries.html") Saved queries
          li
            a(href="#") Draft queries
          li.pull-right
            .que-page-header-right
              a.btn.btn-que-primary(href="./write.html") Write a query
    .container.que-contents
      .row
        .col-md-8.col-md-offset-2
          h2 Looks like there area no database connections here.
          p You can create a database connection.
          form
            .form-group
              input(type="text",class="form-control input-lg",id="Host",placeholder="Host")
            .form-group
              input(type="text",class="form-control input-lg",id="User",placeholder="User")
            .form-group
              input(type="password",class="form-control input-lg",id="Password",placeholder="Password")
            .form-group
              a.btn-que.btn-que-primary.btn-que-lg.btn-que-block(href="index.html") Log In
    script(src="./assets/scripts/application.js")
